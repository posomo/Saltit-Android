<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/saltit_light_gray_02">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/saltit_light_gray_02"/>
            <corners android:radius="99dp"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape = "rectangle">
            <padding
                android:top="9dp"
                android:bottom="9dp"
                android:left="12dp"
                android:right="12dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/saltit_light_gray_01"/>
            <corners
                android:bottomRightRadius="99dp"
                android:bottomLeftRadius="99dp"
                android:topLeftRadius="99dp"
                android:topRightRadius="99dp"/>
        </shape>
    </item>
</ripple>