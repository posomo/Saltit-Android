<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="24dp"
        android:paddingTop="20dp"
        android:paddingVertical="20dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="20dp"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/saltit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="솔팃"
            android:textColor="@color/saltit_blue_text"
            style="@style/Text.Title02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pick_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick!"
            android:textColor="@color/black"
            style="@style/Text.Title02"
            android:paddingLeft="2dp"
            app:layout_constraintStart_toEndOf="@id/saltit_title"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/filter_button"
            style="@style/Text.SubHead03"
            android:layout_width="84dp"
            android:layout_height="32dp"
            android:layout_marginStart="207dp"
            android:background="@drawable/gray_round_filter_button"
            android:drawableStart="@drawable/img_filter_icon"
            android:drawablePadding="10dp"
            android:paddingHorizontal="14dp"
            android:paddingVertical="6dp"
            android:text="필터"
            android:textColor="@color/saltit_gray_01"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/pick_title"
            app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/price_filter_button"
                style="@style/Text.SubHead01"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/gray_round_filter_button"
                android:drawableEnd="@drawable/img_price_filter_icon"
                android:drawablePadding="10dp"
                android:paddingRight="6dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="9dp"
                android:text="12,000원"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/price_reset_button"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:background="@drawable/gray_round_filter_button"
                android:drawableEnd="@drawable/img_price_reset_icon"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_marginLeft="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toEndOf="@id/price_filter_button"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>
