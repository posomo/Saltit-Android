<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.posomo.saltit.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_onboarding_child_third" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.posomo.saltit.login.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_onboardingChildFirstFragment2"
            app:destination="@id/onboardingChildFirstFragment2" />

    </fragment>
    <fragment
        android:id="@+id/onboardingChildFirstFragment2"
        android:name="com.posomo.saltit.login.onboarding.OnboardingChildFirstFragment"
        android:label="OnboardingChildFirstFragment" >
        <action
            android:id="@+id/action_onboardingChildFirstFragment2_to_onboardingChildSecondFragment2"
            app:destination="@id/onboardingChildSecondFragment2" />
    </fragment>
    <fragment
        android:id="@+id/onboardingChildSecondFragment2"
        android:name="com.posomo.saltit.login.onboarding.OnboardingChildSecondFragment"
        android:label="OnboardingChildSecondFragment" >
        <action
            android:id="@+id/action_onboardingChildSecondFragment2_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>