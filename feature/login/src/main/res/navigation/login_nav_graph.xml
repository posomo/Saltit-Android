<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.posomo.saltit.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_onboarding_child_third" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.posomo.saltit.login.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_splashFragment_to_onboardingChildFirstFragment"
            app:destination="@id/onboardingChildFirstFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/onboardingChildFirstFragment"
        android:name="com.posomo.saltit.login.onboarding.OnboardingFirstFragment"
        android:label="OnboardingChildFirstFragment">
        <action
            android:id="@+id/action_onboardingChildFirstFragment_to_onboardingChildSecondFragment"
            app:destination="@id/onboardingChildSecondFragment" />
    </fragment>

    <fragment
        android:id="@+id/onboardingChildSecondFragment"
        android:name="com.posomo.saltit.login.onboarding.OnboardingChildSecondFragment"
        android:label="OnboardingChildSecondFragment">
        <action
            android:id="@+id/action_onboardingChildSecondFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>